{
  "name": "german-law-transformer",
  "version": "1.0.0",
  "description": "Transform German law XML files from gesetze-im-internet.de into frontend-friendly JSON format",
  "main": "law-transformer.js",
  "scripts": {
    "transform": "node law-transformer.js",
    "transform-bnatschg": "node law-transformer.js data/BNatSchG/BJNR254210009.xml output/BNatSchG.json",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "demo": "npm run transform-bnatschg && npm run dev",
    "test": "npm run transform-bnatschg"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "xmldom": "^0.6.0"
  },
  "devDependencies": {
    "vite": "^7.1.3"
  },
  "keywords": [
    "german-law",
    "xml",
    "json",
    "legal-documents",
    "gesetze-im-internet",
    "frontend",
    "visualization"
  ],
  "author": "Law Transformer",
  "license": "MIT"
}
